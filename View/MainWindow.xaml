<Window x:Class="DoAnNote.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoAnNote"
        mc:Ignorable="d"
        Title="Đăng Nhập" Height="680" Width="1200"
        Background="#FFFDFA">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#FFFFFFFF"/>
        <Border Grid.Column="1" Background="#FFFDFA"/>

        <Grid Grid.Column="0" Margin="60,40,40,40" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="260"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" CornerRadius="8" BorderBrush="#00000010" BorderThickness="1" Padding="12" Background="White">
                <Image Source="/Assets/illustration.png" Stretch="Uniform"/>
            </Border>

            <TextBlock HorizontalAlignment="Center" Grid.Row="1" Margin="0,24,0,8"
                       Text="Giữ cuộc sống đơn giản"
                       FontSize="34" FontWeight="Black" Foreground="#000000"/>

            <TextBlock TextAlignment="Center" Grid.Row="2" TextWrapping="Wrap" Width="520"
                       Foreground="#808080" FontSize="16">
                Lưu tất cả ghi chú của bạn trong một ứng dụng đơn giản và trực quan, giúp bạn tận
                hưởng những điều quan trọng nhất trong cuộc sống.
            </TextBlock>
        </Grid>

        <Grid Grid.Column="1" Margin="60" VerticalAlignment="Center">
            <Border Background="White" CornerRadius="16" BorderBrush="#00000010" BorderThickness="1"/>
            <Grid Margin="40" HorizontalAlignment="Center" Width="420">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="16"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="18"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="18"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" HorizontalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="26"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Image Source="/Assets/TrangChinh/Light/Logo_light.png" Stretch="Uniform"/>
                    <TextBlock Grid.Column="2" Text="NOTE" FontSize="28" FontWeight="Black" Foreground="#222222"/>
                    <TextBlock Grid.Column="3" Text=".me" FontSize="28" FontWeight="SemiBold" Foreground="#7A7A7A" Margin="4,0,0,0" FontStyle="Italic"/>
                </Grid>

                <Button x:Name="BtnLoginAccount" Grid.Row="1"
        Style="{StaticResource RoundedButton}" Background="#F7685C"
        Margin="70,16,70,0" Grid.RowSpan="2" Height="44"
        HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
        Click="BtnLoginAccount_Click">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Đăng nhập bằng tài khoản" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Grid Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Rectangle Height="1" Fill="#22000000" Margin="0,10"/>
                    <TextBlock Grid.Column="1" Margin="16,0" Foreground="#88000000" Text="hoặc đăng nhập ẩn danh"/>
                    <Rectangle Grid.Column="2" Height="1" Fill="#22000000" Margin="0,10"/>
                </Grid>

                <TextBox x:Name="TxtAlias" Style="{StaticResource RoundedTextBox}" Grid.Row="6" Height="42" FontSize="14" Padding="12,0"
                         BorderBrush="#E0E0E0" BorderThickness="1" Background="White" Margin="70 16 70 0"
                         Tag="Nhập mật danh bí mật của bạn"/>

                <Button x:Name="BtnAndanh" Grid.Row="8" Background="#30C58D" Style="{StaticResource RoundedButton}" Margin="70 16 70 0" Height="44" Click="BtnAndanh_Click">
                    <TextBlock Text="Đăng nhập ẩn danh" FontWeight="SemiBold"/>
                </Button>
            </Grid>
        </Grid>

    </Grid>
</Window>
